<% include header %>
<div class="pt-5 col-md-6 mx-auto">
    <div class="card">
        <div class="card-header">
            <h3>Change password</h3>
            <h5 class="card-subtitle text-muted">
                Enter the password reset code from your email below.
            </h5>
        </div>
        <div class="card-body">
            <form action="/verify/passwordReset?_method=patch" method="post">
                <label for="code">Code:</label>
                <div class="form-group">
                    <input class="form-control form-control-lg" type="text" name="code" id="code" required>
                </div>

                <label for="newPassword">New password:</label>
                <div class="form-group">
                    <input class="form-control form-control-lg" type="password" name="newPassword" id="newPassword" 
                        pattern="^(?=.*[a-z])(?=.*[A-Z])(?=.*\d)[a-zA-Z\d]{8,}$" 
                        title="Minimum of 8 characters, one lowercase letter,one uppercase letter and a number"
                        required>
                </div>

                <label for="newPassword2">Verify new password:</label>
                <div class="form-group">
                    <input class="form-control form-control-lg" type="password" name="newPassword2" id="newPassword2" 
                        pattern="^(?=.*[a-z])(?=.*[A-Z])(?=.*\d)[a-zA-Z\d]{8,}$" 
                        title="Minimum of 8 characters, one lowercase letter,one uppercase letter and a number" 
                        required>
                </div>

                <div class="form-group">
                    <input class="btn btn-primary btn-block" type="submit" value="Confirm">
                </div>
            </form>
        </div>
    </div>
</div>
<% include footer %>