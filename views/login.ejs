<% include header %>
<div class="pt-5 col-md-6 mx-auto">
    <div class="card">
        <div class="card-header">
            <h3 class="mb-0">Login Page</h3>
        </div>
        <div class="card-body">
            <form action="/login" method="post">
                <label for="username">Username:</label>
                <div class="form-group">
                    <input class="form-control form-control-lg" type="text" name="username" id="username" required>
                </div>
                
                <label for="password">Password:</label>
                <div class="form-group">
                    <input class="form-control form-control-lg" type="password" name="password" id="password" required>
                </div>
                <div class="small text-dark">
                    <p>
                        New user?
                        <a href="/register">Register here</a>
                    </p>
                    <p>
                        Wish to reactivate account or resend activation email?
                        <a href="/reactivateAccount">Send email</a>
                    </p>
                    <p>
                        Forgotten password?
                        <a href="/forgottenPassword">Change password</a>
                    </p>
                </div>
                <div class="form-group">
                    <input class="btn btn-primary btn-block" type="submit" value="Log in">
                </div>
            </form>
        </div>
    </div>
</div>
<% include footer %>
